<?xml version="1.0" encoding="utf-8"?>    

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<RelativeLayout 
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#fffffb"
    android:orientation="vertical" >
    
  	  	<LinearLayout 
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal"
        	>
        
        	<ImageView 
        	    android:id="@+id/recuit_recuitType"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:layout_gravity="center"
            	android:background="@drawable/image_fulltime"
            	/>

        	<RelativeLayout
        	    android:layout_width="196dp"
        	    android:layout_height="wrap_content" >
            
         
        		<TextView 
        	    	android:id="@+id/recuit_content"
        		    android:layout_width="wrap_content"
        		    android:layout_height="wrap_content"
                	android:layout_marginTop="10dp"
        		    android:layout_alignLeft="@id/recuit_content" 
        		    android:text="岗位：程序员鼓励师"
                	android:textSize="12dp"
        		    />
        		<TextView 
        	    	android:id="@+id/recuit_salary"
        		    android:layout_width="wrap_content"
        		    android:layout_height="wrap_content"
        		    android:layout_below="@id/recuit_content"
    				
        		    android:layout_alignLeft="@id/recuit_content" 
        		    android:text="薪资：1000/月"
                	android:textSize="12dp"
        		    />
        		<LinearLayout 
        		    android:layout_width="wrap_content"
        		    android:layout_height="wrap_content"
    				android:layout_below="@id/recuit_salary"
                	android:layout_alignParentLeft="true"
                	android:layout_marginBottom="10dp"
        		    android:orientation="horizontal">
        		    <TextView 
        		        android:layout_width="wrap_content"
        		    	android:layout_height="wrap_content"
                		android:text="地区："
                		android:textSize="12dp"
        		    	/>
        		   	<TextView
                	android:id="@+id/recuit_location"
                	android:layout_width="match_parent"
                	android:layout_height="wrap_content"
                	android:text="广州天河"
                	android:textSize="12dp"
                	/>
        		</LinearLayout>
            
        	</RelativeLayout>

        	<ImageView
        	    android:id="@+id/recuit_enough"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:visibility="gone"
            	android:layout_gravity="center"
        	    android:background="@drawable/image_enough" />

        		<TextView 
        	    	android:id="@+id/recuit_publishTime"
        		    android:layout_width="wrap_content"
        		    android:layout_height="wrap_content"
            		android:layout_gravity="center"
        		    android:text="3分钟前"
                	android:textSize="12dp"
        		    />
	</LinearLayout>

</RelativeLayout>

</LinearLayout>