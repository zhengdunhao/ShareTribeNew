<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dip"
        >
    <include layout="@layout/recuitpublish_title" />

</LinearLayout>
    
    <TableLayout
        android:id="@+id/loginPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
      
        >
        <TableRow >
            <TextView 
                
                android:layout_width="0dip"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                
                android:text="招聘？求职:"/>
            <Spinner 
                android:id="@+id/sp_work"
                android:layout_width="0dip"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text"
                android:entries="@array/work"/>
        </TableRow>
        
        <TableRow android:layout_marginTop="10dip">
            <TextView 
                android:id="@+id/tv_type"
                android:layout_width="0dip"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="招聘类型:"/>
            <Spinner 
                android:layout_width="0dip"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:id="@+id/sp_type"
                android:background="@drawable/edit_text"
                android:entries="@array/worktype"/>
        </TableRow>
        
        <TableRow android:layout_marginTop="10dip">
            <TextView 
                android:id="@+id/tv_direction"
                android:layout_width="0dip"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="工作类型:"/>
            <EditText
                android:id="@+id/txt_worktype"
                android:layout_width="0dip"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text"/>
        </TableRow>
        
        <TableRow android:layout_marginTop="10dip">
            <TextView 
                android:id="@+id/tv_salary"
                android:layout_width="0dip"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="薪资:"/>
            <EditText
                android:id="@+id/txt_salary"
                android:layout_width="0dip"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text"/>
        </TableRow>
        
         <TableRow android:layout_marginTop="10dip">
            <TextView 
                android:layout_width="0dip"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="联系方式:"/>
            <EditText
                android:id="@+id/txt_phone"
                android:layout_width="0dip"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text"/>
        </TableRow>
        
         <TableRow android:layout_marginTop="10dip">
            <TextView 
                android:layout_width="0dip"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="工作地点:"/>
            <EditText
                android:id="@+id/txt_location"
                android:layout_width="0dip"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text"/>
        </TableRow>
        </TableLayout>
            <TextView 
                android:id="@+id/tv_information"
                android:layout_marginTop="10dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="详细介绍:"/>
            <EditText
                android:id="@+id/txt_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:inputType="textMultiLine"
        android:maxLines="26"
        android:gravity="fill_horizontal"
        android:background="@drawable/edit_text"
        android:hint="请填写公司介绍以及相关岗位要求。">
    </EditText>

</LinearLayout>
