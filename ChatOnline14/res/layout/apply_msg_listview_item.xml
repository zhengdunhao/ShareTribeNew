<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dip"
    android:paddingLeft="10dip"
    android:paddingRight="10dip"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
       >
       <CheckBox 
        android:id="@+id/check_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:layout_gravity="center_vertical|left"
        android:scaleX="0.8"
        android:scaleY="0.8"
        style="@style/usermsg_checkbox_theme" 
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:clickable="false"
        android:visibility="visible"/>
        <com.atm.chatonline.bbs.commom.CircleImageView 
    android:id="@+id/applymsg_headimg"
    android:layout_width="45dip"
    android:layout_height="45dip"
    android:layout_marginTop="3dip"
    android:contentDescription="@string/apply_msg_str"
    />
      <RelativeLayout 
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dip"
          android:layout_marginTop="5dip"
          >
          <TextView 
              android:id="@+id/applymsg_nickname"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/black"
              android:textSize="14sp"
              android:text="陌天恒"/>
          <TextView 
              android:id="@+id/applymsg_test_content"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/applymsg_nickname"
              android:textColor="@color/black"
              android:textSize="14sp"
              android:maxEms="30"
              android:ellipsize="end"
              android:maxLines="2"
              android:text="@string/applymsg_test_text"/>
       
      </RelativeLayout>  
    </LinearLayout>
    <TextView 
        android:id="@+id/applyMsgTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="12sp"
        android:textColor="@color/usermsg_time_text_color"
        android:text="2016-05-19"
        android:layout_gravity="right"/>
    <ImageView 
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="@drawable/bg_usercenter_note_line"/>

</LinearLayout>
