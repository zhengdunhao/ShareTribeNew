<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/background_personal_message"
	android:paddingTop="5dip"
	android:paddingBottom="5dip"
	android:paddingLeft="10dip"
	android:paddingRight="2dip"
	>
	<Button 
		android:id="@+id/single_chat_back"
		android:layout_width="20dip"
		android:layout_height="wrap_content"
		android:layout_marginTop="5dp"
		android:layout_marginBottom="5dp"
		android:layout_alignParentStart="true"
		android:layout_alignParentLeft="true"
		android:background="@drawable/btn_onback"/>
	
	<ImageButton 
		android:id="@+id/personal_attention"
		android:layout_width="42dp"
		android:layout_height="wrap_content"
		android:layout_alignParentEnd="true"
		android:layout_alignParentRight="true"
		android:contentDescription="@string/personal_message"
		android:background="@drawable/heart_normal"/>
	
</RelativeLayout>
