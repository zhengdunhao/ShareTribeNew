<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:id="@+id/personal_center_title_bar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        layout="@layout/only_back_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/personal_center_title_bar"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="15dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:layout_weight="2"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="15"
                android:gravity="center"
                android:text="您的意见是我们前进的动力"
                android:textColor="@color/black"
                android:textSize="18sp" />

          
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:layout_weight="6"
            android:background="@drawable/bg_only_circle_corner_rect"
            android:orientation="horizontal" >
		 <com.atm.chatonline.chat.util.ClearEditText
                android:id="@+id/edit_feedback"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:gravity="top"
                android:background="@drawable/edit_text"
                android:paddingTop="3dp"
                android:singleLine="true" />
        </LinearLayout>

       

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:layout_weight="2"
            android:orientation="horizontal" >
		 
            <Button 
                android:id="@+id/btn_sure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="提   交"
                android:background="@drawable/btn_sure"/>

          
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>