<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:id="@+id/personal_center_title_bar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        layout="@layout/only_back_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/personal_center_title_bar"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="15dp" >

        <LinearLayout
            android:id="@+id/small_font"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:layout_weight="2"
            android:background="@drawable/bg_only_circle_corner_rect"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:text="小号字体"
                android:textColor="@color/black"
                android:textSize="18sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/medium_font"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:layout_weight="2"
            android:background="@drawable/bg_only_circle_corner_rect"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:text="中号字体"
                android:textColor="@color/black"
                android:textSize="18sp" />

        
        </LinearLayout>

        <LinearLayout
            android:id="@+id/big_font"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:layout_weight="2"
            android:background="@drawable/bg_only_circle_corner_rect"
            android:orientation="horizontal" >

               <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:text="大号字体"
                android:textColor="@color/black"
                android:textSize="18sp" />
           
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnSure"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:layout_weight="2"
            android:orientation="horizontal" >
            
        
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:layout_weight="2"
            android:orientation="horizontal" >
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
