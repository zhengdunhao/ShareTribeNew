<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:id="@+id/personal_center_title_bar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        layout="@layout/only_back_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/personal_center_title_bar"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="15dp" >

        <LinearLayout
            android:id="@+id/login_pwd"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:layout_weight="2"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="5"
                android:gravity="center"
                android:text="登入密码"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <com.atm.chatonline.chat.util.ClearEditText
                android:id="@+id/edit_login_pwd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:background="@drawable/edit_text"
                android:inputType="textPassword"
                android:maxLength="15"
                android:paddingTop="3dp"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/new_email"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:layout_weight="2"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="5"
                android:gravity="center"
                android:text="新邮箱"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <com.atm.chatonline.chat.util.ClearEditText
                android:id="@+id/edit_new_email"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:background="@drawable/edit_text"
                android:maxLength="15"
                android:paddingTop="3dp"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:layout_weight="2"
            android:orientation="horizontal" >

           
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnSure"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:layout_weight="2"
            android:orientation="horizontal" >
            
            <Button 
                android:id="@+id/btn_sure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                
                android:text="确 定"
                android:background="@drawable/btn_sure"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:layout_weight="2"
            android:orientation="horizontal" >
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>