<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/bg_sliding">
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">
        
        
        
        <com.atm.chatonline.bbs.commom.CircleImageView
            android:id="@+id/btn_headimage"
            android:layout_width="160dip"
            android:layout_height="160dip"
            android:layout_centerInParent="true"
            android:contentDescription="@string/desc"
            android:src="@drawable/btn_headimage_i" />
      
        
    </RelativeLayout>
    
    <LinearLayout
        android:id="@+id/main_menu"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/bg_sliding_item"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/bbs"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:orientation="horizontal" >
            
            <ImageView
                android:id="@+id/btn_bbs_iv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:contentDescription="@string/desc"
                android:src="@drawable/tv_bbs" >

            </ImageView>
            <TextView
                android:id="@+id/btn_bbs"
                android:layout_width="0dp"
                android:layout_height="match_parent"
        		android:gravity="center"
                android:layout_weight="5"
                android:text="论    坛"
                android:textSize="18sp" >
            </TextView>
        </LinearLayout>
        
		<View  
   		android:layout_width="fill_parent"  
    	android:layout_height="0dp" 
    	android:layout_weight="1"
   		android:background="#367459"  
		/>  

        <LinearLayout
            android:id="@+id/chat"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:orientation="horizontal" >
            
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_chat_iv"
                android:src="@drawable/tv_chat"
                android:contentDescription="@string/desc" >
            </ImageView>
            <TextView
                android:id="@+id/btn_chat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
        		android:gravity="center"
                android:layout_weight="5"
                android:text="聊    天"
                android:textSize="18sp" >
            </TextView>
        </LinearLayout>
        
        <View  
   		android:layout_width="fill_parent"  
    	android:layout_height="0dp" 
    	android:layout_weight="1"
   		android:background="#367459"  
		/>  
        
        <LinearLayout 
            android:id="@+id/recuit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="28"
            android:orientation="horizontal">
            
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_recuit_iv"
                android:src="@drawable/tv_recuit"
                android:contentDescription="@string/desc" >
            </ImageView>
            <TextView
                android:id="@+id/btn_recuit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
        		android:gravity="center"
                android:layout_weight="5"
                android:text="招    聘"
                android:textSize="18sp" >
            </TextView>
        </LinearLayout>
        
          <View  
   		android:layout_width="fill_parent"  
    	android:layout_height="0dp" 
    	android:layout_weight="1"
   		android:background="#367459"  
		/>  
        
        <LinearLayout 
            android:id="@+id/news"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="28"
            android:orientation="horizontal">
            
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_news_iv"
                android:src="@drawable/school_logo"
                android:contentDescription="@string/desc" >
            </ImageView>
            <TextView
                android:id="@+id/btn_news"
                android:layout_width="0dp"
                android:layout_height="match_parent"
        		android:gravity="center"
                android:layout_weight="5"
                android:text="校友动态"
                android:textSize="18sp" >
            </TextView>
        </LinearLayout>
    </LinearLayout>
    
    
    <LinearLayout
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/bg_sliding_item"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/user_center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:orientation="horizontal" >
            
            <ImageView
                android:id="@+id/btn_personal_iv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:contentDescription="@string/desc"
                android:src="@drawable/tv_personal" >

            </ImageView>
            <TextView
                android:id="@+id/btn_personal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
        		android:gravity="center"
                android:layout_weight="5"
                android:text="个人中心"
                android:textSize="18sp" >
            </TextView>
        </LinearLayout>
        
		<View  
   		android:layout_width="fill_parent"  
    	android:layout_height="0dp" 
    	android:layout_weight="1"
   		android:background="#367459"  
		/>  

        <LinearLayout
            android:id="@+id/my_message_tab"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:orientation="horizontal" >
            
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_msg_iv"
                android:src="@drawable/tv_msg"
                android:contentDescription="@string/desc" >
            </ImageView>
            <TextView
                android:id="@+id/btn_msg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
        		android:gravity="center"
                android:layout_weight="5"
                android:text="我的消息"
                android:textSize="18sp" >
            </TextView>
        </LinearLayout>
        
        <View  
   		android:layout_width="fill_parent"  
    	android:layout_height="0dp" 
    	android:layout_weight="1"
   		android:background="#367459"  
		/>  
        
        <LinearLayout 
            android:id="@+id/setting"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="28"
            android:orientation="horizontal">
            
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_settings_iv"
                android:src="@drawable/tv_settings"
                android:contentDescription="@string/desc" >
            </ImageView>
            <TextView
                android:id="@+id/btn_settings"
                android:layout_width="0dp"
                android:layout_height="match_parent"
        		android:gravity="center"
                android:layout_weight="5"
                android:text="设   置"
                android:textSize="18sp" >
            </TextView>
        </LinearLayout>
    </LinearLayout>
    
    <RelativeLayout 
       	android:layout_marginTop="8dp"
       	android:layout_marginRight="16dp"
       	android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <Button
            android:id="@+id/btn_slide_exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#feeeed"
            android:background="@drawable/bg_sliding_exit"
            android:text="退出登录" />
        
    </RelativeLayout>
</LinearLayout>
